# Server Configuration
PORT=3100
WS_PORT=3101
NODE_ENV=production

# OAuth 2.0 Configuration - CONFIGURE THESE FOR CLAUDE.AI CONNECTOR
# Get your credentials from your OAuth provider
OAUTH_CLIENT_ID=your-oauth-client-id
OAUTH_CLIENT_SECRET=your-oauth-client-secret

# JWT Secret for token signing
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=generate-random-jwt-secret

# Client Authentication Secret - SHARE THIS WITH REMOTE PCs
# Generate with: node -e "console.log(require('crypto').randomBytes(24).toString('hex'))"
CLIENT_AUTH_SECRET=generate-random-client-auth-secret

# Server URL - REQUIRED FOR AGENTS TO CONNECT
# Examples:
#   - https://your-domain.com (recommended - use actual domain)
#   - https://YOUR_IP.sslip.io (for dynamic IP using sslip.io)
#   - https://localhost:3102 (local testing only)
SERVER_URL=https://your-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# API Key Authentication (hash only - NEVER store plaintext key here)
# Generate new key: node -e "const{randomBytes,createHash}=require('crypto');const k=randomBytes(32).toString('base64url');console.log('Key:',k,'Hash:',createHash('sha256').update(k).digest('hex'))"
API_KEY_HASH=your-api-key-hash
